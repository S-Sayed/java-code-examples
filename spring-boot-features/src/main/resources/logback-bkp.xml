<?xml version="1.0" encoding="UTF-8"?>
<configuration>
 
 <appender name = "STDOUT" class = "ch.qos.logback.core.ConsoleAppender">
      <encoder>
         <pattern>[%d{yyyy-MM-dd'T'HH:mm:ss.sss'Z'}] [%C] [%t] [%L] [%-5p] %m%n</pattern>
      </encoder>
   </appender>
 
 <!--
 C >> class name 
 t >> thread name 
 L >> line number 
 -5p >> log level 
 m%n >> the log message 
  
[2019-07-12T18:25:08.008Z] [packagename.SpringFeaturesApplication] [main] [21] [INFO ] Info Message
[2019-07-12T18:25:08.008Z] [packagename.SpringFeaturesApplication] [main] [22] [WARN ] WARN Message
[2019-07-12T18:25:08.008Z] [packagename.SpringFeaturesApplication] [main] [23] [ERROR] Error Message
 
  -->
 
	<root level="INFO">
	<appender-ref ref = "STDOUT"/> 
	</root>
	
</configuration>